<VirtualHost *:80>
	ServerAdmin mail@julius-seltenheim.com
	ServerName NOT-FOUND
	
	Redirect 404 /
	ErrorDocument 404 "Page Not Found"
</VirtualHost>

<VirtualHost *:80>
    ServerName julius-seltenheim.com
	ServerAlias www.julius-seltenheim.com www.julius-seltenheim.de julius-seltenheim.de seltenheim.info www.seltenheim.info js

    AllowEncodedSlashes on

    ServerAdmin mail@julius-seltenheim.com
	
    CustomLog ${APACHE_LOG_DIR}/access.log combined
    ErrorLog ${APACHE_LOG_DIR}/error.log
    LogLevel warn

    #http://playframework.blogspot.de/2010/03/upgrading-your-play-applications.html

    <Proxy balancer://mycluster>
        BalancerMember http://localhost:9000
        BalancerMember http://localhost:9001
    </Proxy>

    <Proxy *>
        Order Allow,Deny
        Allow From All
    </Proxy>
    ProxyPreserveHost On
    ProxyPass /balancer-manager !
    ProxyPass / balancer://mycluster/ nocanon
    ProxyPassReverse / http://localhost:9000/
    ProxyPassReverse / http://localhost:9001/
</VirtualHost>

<VirtualHost *:80>
	ServerName calendar.julius-seltenheim.com

    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}
</VirtualHost>

<VirtualHost *:443>
    ServerName calendar.julius-seltenheim.com

	RequestHeader set X-Forwarded-Proto "https"
    SSLEngine On
    SSLCertificateFile /etc/ssl/certs/julius-seltenheim.com.crt
    SSLCertificateKeyFile /etc/ssl/private/julius-seltenheim.com.key
    <Location />
        SSLRequireSSL
    </Location>
	
    ProxyPreserveHost On
    ProxyPass / http://localhost:8008/
    ProxyPassReverse / http://localhost:8008/
</VirtualHost>